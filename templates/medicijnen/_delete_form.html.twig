<form method="post" action="{{ path('medicijnen_delete', {'id': medicijnen.id}) }}" onsubmit="return confirm('Weet je zeker dat je dit medicijn wilt verwijderen? ');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ medicijnen.id) }}">
    <button class="btn btn-danger"> <b> Delete </b></button>
</form>
